<?xml version="1.0"?>
<thlogic>
    <attr sel="#header" th:replace="header :: header" />
    <attr sel="#footer" th:replace="footer :: footer" />

    <attr sel="#article-main" th:object="${article}">
        <!-- ${article.title} => *{title} 로 생략가능       -->
        <attr sel="#article-header/h1" th:text="*{title}" />
        <attr sel="#nickname" th:text="*{nickname}" />
        <attr sel="#email" th:text="*{email}" />
        <attr sel="#createdAt" th:datetime="*{createdAt}" th:text="*{#temporals.format(createdAt, 'yyyy-MM-dd-HH:mm:ss')}" />
        <attr sel="#hashtag" th:text="*{hashtag}" />
        <attr sel="#article-content/pre" th:text="*{content}" />
    </attr>

    <attr sel="#article-comments" th:remove="all-but-first">
        <attr sel="li[0]" th:each="articleComments : ${articleComments}">
            <attr sel="div/strong" th:text="${articleComments.nickname}"/>
            <attr sel="div/small/time" th:datetime="${articleComments.createdAt}" th:text="${#temporals.format(articleComments.createdAt, 'yyyy-MM-dd-HH:mm:ss')}"/>
            <attr sel="div/p" th:text="${articleComments.content}"/>
        </attr>
    </attr>
</thlogic>
